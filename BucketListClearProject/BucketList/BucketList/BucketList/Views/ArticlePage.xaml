<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Views.ArticlePage"
             BackgroundColor = "#F2EEE6">
    <ContentPage.Content>
        <ScrollView HeightRequest="10"
                IsClippedToBounds="True">
            <StackLayout Orientation="Vertical" Spacing="-5" >
                <Image Source="articleTitle.Png" Scale="1.1" />
                <Frame HasShadow="False" HeightRequest="50" CornerRadius="20">
                    <Label x:Name="articleTitle" TextColor="Black" FontSize="25" FontAttributes="Bold,Italic" HorizontalOptions="Start"/>
                </Frame>
                <Frame BackgroundColor="White" CornerRadius="15" Margin="20">
                    <Label 
                        x:Name = "currentArticle"
                        FontSize = "20"
                        TextColor="Black"/>

                </Frame>
                <Frame BackgroundColor="White" CornerRadius="15" Margin="20" >
                    <Label x:Name="articleAuthor" FontSize = "20" TextColor="Black"/>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>